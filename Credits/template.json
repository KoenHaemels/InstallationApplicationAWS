{
 "provisioners": [
  {  
      "type": "file",
      "source": "etc/passwd-s3fs",
      "destination": "~/passwd-s3fs"
    },
  {  
      "type": "file",
      "source": "Credits/template.json",
      "destination": "~/template.json"
    },
  { 
  "type": "shell",
     "inline": [
        "sudo apt-get install git -y",
        "cd /var",
        "sudo git clone https://github.com/KoenHaemels/InstallationApplicationAWS.git",
        "cd InstallationApplicationAWS/",
        "sudo chmod +x main.sh",
        "sudo mv ~/passwd-s3fs etc/",
        "sudo mv ~/template.json Credits/",
        "./main.sh"
]
}
],

  "variables": {
    "aws_access_key": "acceskeyAZURE",
    "aws_secret_key": "accessecretkeyAZURE"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "eu-central-1",
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "imagename",
    "source_ami_filter": {
            "filters": {
                "virtualization-type": "hvm",
                "name": "*ubuntu-yakkety-16.10-amd64-server-*",
                "root-device-type": "ebs"
            },
            "owners": ["owners_AZURE"],
            "most_recent": true
        }
  }]
}
}
